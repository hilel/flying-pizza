{
  "name": "pizza-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/pizza-api",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/pizza-api",
        "main": "apps/pizza-api/main.ts",
        "tsConfig": "apps/pizza-api/tsconfig.app.json",
        "assets": ["apps/pizza-api/assets", "apps/pizza-api/package.json"],
        "isolatedConfig": true,
        "webpackConfig": "apps/pizza-api/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nrwl/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "pizza-api:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "pizza-api:build:development"
        },
        "production": {
          "buildTarget": "pizza-api:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/pizza-api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/pizza-api/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "serve-with-emulators": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "nx run pizza-api:serve:production",
          "firebase emulators:start --only functions"
        ],
        "parallel": false
      }
    }
    
  },
  "tags": []
}
